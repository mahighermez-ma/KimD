<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:id="@+id/CardViewGetChild"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtfirstchar"
                android:textSize="25dp"
                android:text="A"
                android:textAlignment="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/shapecircle"
                android:layout_marginHorizontal="10dp"
                android:layout_gravity="center_vertical"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginHorizontal="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtcallnumber"
                    android:textSize="15sp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"

                    />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
<!--                <ImageView-->
<!--                    android:layout_width="30dp"-->
<!--                    android:layout_height="20dp"-->
<!--                    android:background="@drawable/customborder"-->
<!--                    android:id="@+id/myImageView"-->
<!--                    android:layout_marginVertical="10dp"-->
<!--                    />-->
                    <TextView
                        android:id="@+id/txtmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:visibility="gone"
                        android:background="@drawable/customborder"
                        android:padding="3dp"
                        android:text="KimD"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12dp"
                        android:fontFamily="@font/scriptmtbold"
                        android:layout_marginVertical="10dp"/></RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/imgdirection"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:id="@+id/txtdate"
                        android:textSize="15dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginHorizontal="20dp"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical">

            <Button
                android:id="@+id/btncall"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_call_black_24dp" />
            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_sms_black_24dp"
                android:layout_marginHorizontal="10dp"
                android:id="@+id/btnsms"
                />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
